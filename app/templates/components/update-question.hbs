<h3>Edit</h3>
<form>
  <div class="form-group">
    <label for="title">Question</label>
    {{input class="form-control" value=question.title id="title"}}
  </div>
  <div class="form-group">
    <label for="author">Username</label>
    {{input class="form-control" value=question.author id="author"}}
  </div>
  <div class="form-group">
    <label for="date">Date</label>
    {{input class="form-control" value=question.date id="date"}}
  </div>
  <div class="form-group">
    <label for="detail">Additional Details</label>
    {{textarea rows=10 class="form-control" value=question.detail id="detail"}}
  </div>
  <button class="btn" {{action 'updateQuestion' question}}>Save Changes</button>
</form>
