<h2>Add a new question</h2>
<form>
  <div class="form-group">
    <label for="title">Question</label>
    {{input class="form-control" value=title id="title"}}
  </div>
  <div class="form-group">
    <label for="author">Username</label>
    {{input class="form-control" value=author id="author"}}
  </div>
  <div class="form-group">
    <label for="date">Date</label>
    {{input class="form-control" value=date id="date"}}
  </div>
  <div class="form-group">
    <label for="detail">Additional Details</label>
    {{textarea rows=10 class="form-control" value=detail id="detail"}}
  </div>
  <button class="btn" {{action 'saveQuestion'}}>Add</button>
</form>
