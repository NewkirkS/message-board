<h3 class="subtitle">Add an Answer</h3>
<form>
  <div class="form-group">
    <label for="author">Username</label>
    {{input class="form-control" value=author id="author"}}
  </div>
  <div class="form-group">
    <label for="date">Date</label>
    {{input class="form-control" value=date id="date"}}
  </div>
  <div class="form-group">
    <label for="content">Answer</label>
    {{textarea rows=8 class="form-control" value=content id="content"}}
  </div>
  <button class="btn" {{action "saveAnswer"}}>Add</button>
</form>
